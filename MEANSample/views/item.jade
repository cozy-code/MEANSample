extends layout

block content
    div(ng-app="app")
        h1= title
        div(ng-controller="controller",ng-init="itemid='#{itemid}'")
            |id:{{itemid}}
            br
            |Name:{{item.name}}
            br
            |Age:{{item.age}}
            br
            |Comment: {{item.comment}}
            br
block script
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-resource.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-route.min.js")
    script(src="/javascripts/models/Person.js")
    script(src="/javascripts/controllers/item.js")